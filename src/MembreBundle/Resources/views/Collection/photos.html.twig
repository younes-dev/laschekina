<div class="tab-pane {% if activeTab == "photos" %} active {% endif %}" id="tab2">
    {% if (app.user != null  and member.id == app.user.id ) %}
    <div class="col-md-12 col-xs-12"><h4>{{ 'collection_add_picture'|trans }}</h4></div>


    <div class="col-md-12 col-xs-12">
        {% for flashMessage in app.session.flashbag.get('collectionPicturesuccess') %}

            <div class="alert alert-success alert-block"><a href="#" data-dismiss="alert" class="close">×</a>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('collectionPicturedelete') %}
            <div class="alert alert-success alert-block"><a href="#" data-dismiss="alert" class="close">×</a>
                {{ flashMessage }}
            </div>
        {% endfor %}
    </div>
        {% include 'MembreBundle:Collection:form.html.twig' with {'active': "photos" } %}

    <div class="col-md-12">
        <hr/>
    </div>
    {% endif %}
    {% if listePhotos != null %}
    <div class="col-md-12"><h3>{{ 'photos'|trans }}</h3></div>
    <div class="clearfix"></div>


    <div class="list-images clearfix">
        {% for item in listePhotos %}
            <div class="col-md-4 col-xs-12 col-sm-4 margin-bottom-40">

                <div class="image-holder-content">
				<a href="{{ path_picture ~ item.picture }}" class="fancybox">
                    <div class="small-photo-vip img-resize imgLiquid">

                        <img src="{{ path_picture ~ item.picture }}">
                    </div>
					</a>
                    <div class="info-video">
                        <p>{{ item.title }}</p>


                    </div>

                    {% if (app.user != null  and member.id == app.user.id ) %}

                        <a class="btn-icone-edit" title="{{ 'show_page_home'|trans }}"   type="button" href="{{ path('collection_change_etat' , {'id' : item.id }) }}"  style=" left: 0 !important;">
                            {% if item.showPageHome == 1 %}
                            <i class="zmdi zmdi-eye"></i>
                            {% else %}
                            <i class="zmdi zmdi-eye-off"></i>
                            {% endif %}
                        </a>


                    <a class="delete-btn" type="button" onclick="Openmodal({{ item.id }} , 'Collectionmedia')">
                        <i class="zmdi zmdi-close"></i></a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>

    {% endif %}
</div>