                                </a>
                            {% endif %}
                        </div>


                    </div>


                </div>
            {% endfor %}

        </div>
    {% endif %}

    {% if liste_url|length > 0 %}
        <div class="clearfix mag-bttom-sm">

            <div class="col-md-12 ">

                <div class="col-md-12">
                    <div class="seperator-catg title-v">
                        <div> {{ 'title_autre_video'|trans }}</div>
                    </div>
                </div>
            </div>

            {% for item in liste_url %}
                <div class="col-md-4 col-xs-12 col-sm-4">
                    <div class="box-page-video">
                        <div class="box-page-video">
                            <div class="video-poster"  >
                                <div class="iframe-resize ">


                                    {% if item.sourcevideo =="vimeo" %}
                                    <iframe style="width: 100%;    height: 100%;"
                                            src="//player.vimeo.com/video/{{ item.url }}?byline=0&amp;portrait=0"
                                            frameborder="0"
                                            webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                                    {% elseif item.sourcevideo == "dailymotion" %}
                                        <iframe style="width: 100%;     height: 100%;" frameborder="0"
                                                src="//www.dailymotion.com/embed/video/{{ item.url }}"
                                                allowfullscreen></iframe>
                                    {% elseif  item.sourcevideo == "youtube"   %}
                                        <iframe   allowfullscreen="allowfullscreen"
                                                  mozallowfullscreen="mozallowfullscreen"
                                                  msallowfullscreen="msallowfullscreen"
                                                  oallowfullscreen="oallowfullscreen"
                                                  webkitallowfullscreen="webkitallowfullscreen" src="https://www.youtube.com/embed/{{ item.url }}"    ></iframe>
                                    {% else %}
                                        <video style="width: 100%;  background:  #030203;" controls="">
                                            <source src="{{ path_picture~ item.path }}" type="video/mp4">

                                            {% if app.request.locale == 'fr' %}
                                                Votre navigateur ne prend pas en charge la vidéo HTML5.
                                            {% else %}
                                                Your browser does not support HTML5 video.
                                            {% endif %}
                                        </video>
                                        {% endif %}
                                </div>


                                <div class="info-video">
                                    <p>{{ item.title }}</p>


                                </div>


                            </div>
