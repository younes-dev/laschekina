                            <span style="display: none" id="upload-book">
                              <label class="label-control sign-up-label">{{ 'form.book'|trans }}</label>
                                 <input type="file" name="mediapathBook" id="mediapathBook"
                                        data-label="Choisir livre"
                                        data-preview="on">

                               </span>
                            <span id="mediapathBookError" style="color: red ; display: none">Ce champ est obligatoire</span>

                        </div>
                    </div>
                    <div class="form-group clearfix" style="display: none" id="date-sortie-book">
                        <div class="col-md-12 mag-bttom-sm">
                           <label class="label-control sign-up-label">{{ 'form.dateSortie'|trans }}</label>
                           <input name="dateSortieBook"
                                  class='form-control selectDatePicker'>


                        </div>
                    </div>

                    <div class="form-group clearfix" style="display: none" id="edition-book">
                        <div class="col-md-12 mag-bttom-sm">
                                <label class="label-control sign-up-label">{{ 'form.editionBook'|trans }}</label>
                                    <input name="editionBook" class="form-control">


                        </div>
                    </div>
                    <div class="form-group clearfix" style="display: none" id="price-book">
                        <div class="col-md-12 mag-bttom-sm">

                                <label class="label-control sign-up-label">{{ 'form.priceBook'|trans }}</label>
                                    <input type="number" step="any" name="priceBook" class="form-control">


                        </div>
                    </div>

 <div class="form-group clearfix" style="display: none" id="statusMedia">
                        <div class="col-md-12 mag-bttom-sm">

                                <label class="label-control sign-up-label">{{ 'form.statusMedia'|trans }}</label>
                                     <select name="statusMedia" class="form-control">
                                        <option value="Moi uniquement">Moi uniquement</option>
                                          <option value="Public">Public</option>
                                      <option value="Membre">Membre</option>
                                    </select>

                        </div>
                    </div>

                    <div class="form-group clearfix" style="display: none" id="description-book">
                        <div class="col-md-12 mag-bttom-sm">

                           <label class="label-control sign-up-label">{{ 'form.description'|trans }}
                               ( {{ 'form.remarque_description'|trans }} )</label>
                           <textarea style="height: 100px;" maxlength="700" name="descriptionBook" class="form-control "
                                     id="descriptionBook"></textarea>


                        </div>
                    </div>

                    <div class="form-group clearfix" style="display: none" id="contenu-book">
                        <div class="col-md-12 mag-bttom-sm">

                           <label class="label-control sign-up-label">{{ 'form.contenuBook'|trans }}</label>
                           <textarea style="height: 100px;" name="contenuBook" class="form-control ckeditor"
                                     id="contenuBook"></textarea>


                        </div>
                    </div>

                    <div class="form-group">

                        <div class="login-button col-md-8 " >

                            <input type="submit" id="sendForm" class="btn btn-orange" name="ajouter" value="{{ 'btn.add'|trans }}">
                            <img id="loadingsendForm" style="display: none" src="{{ asset('dev/front/images/loading.gif') }}" />
                        </div>

                    </div>

                </form>
            {% else %}
                {% include 'MembreBundle:Collection:form.html.twig' with {'active': "videos"} %}

            {% endif %}
        </div>
        <div class="col-md-12">
            <hr/>
        </div>
    {% endif %}




    {% if liste_mp4|length > 0 %}
        <div class="clearfix mag-bttom-sm">

            <div class="col-md-12 ">

                <div class="col-md-12">
                    <div class="seperator-catg title-v">
                        <div> {{ 'title_video'|trans }}</div>
                    </div>
                </div>
            </div>


            {% for item in liste_mp4 %}
                <div class="col-md-4 col-xs-12 col-sm-4">
                    <div class="box-page-video">
                        <div class="box-page-video">

                            <div class="video-poster">
                                <div class="iframe-resize ">


                                    <video width="250" height="150" controls="">
                                        <source src="{{ path_picture~ item.path }}" type="video/mp4">

                                        {% if app.request.locale == 'fr' %}
                                            Votre navigateur ne prend pas en charge la vidéo HTML5.
                                        {% else %}
                                            Your browser does not support HTML5 video.
                                        {% endif %}
                                    </video>

                                </div>


                                <div class="info-video">
                                    <p>{{ item.title }} </p>


                                </div>


