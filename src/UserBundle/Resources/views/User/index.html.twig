{% extends '::content-backend.html.twig' %}

{% block title %}{{ 'page.user'|trans }}{% endblock %}
{% block hiarche %}
<div class="page-content" >
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                      {% if role == "admin" %}
                          <a href="{{ path('user_index') }}"> <span>   {{ 'page.user'|trans }} </span></a>
                      {% else    %}
                              <a href="{{ path('user_index_vip',{'role' :role}) }}">
                             <span>
                             {% if role == "vip" %}
                                  Liste des VIPs
                             {% elseif role == "fan"%}
                                Liste des groupes de fan
                             {% elseif role == "pro"%}
                                 Liste des  Entreprises
                             {% elseif role == "membre"%}
                                  Liste des membres
                             {% endif %}
                             </span></a>
                      {% endif %}
            </li>
        </ul>
    </div>
    {% endblock %}
    {% block body %}
        {% for flashMessage in app.session.flashbag.get('adminsuccess') %}
            <br/>
            <div class="alert alert-success alert-block"><a href="#" data-dismiss="alert" class="close">×</a>
                {{ 'registration.confirmed'|trans({'%username%': flashMessage}) }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('admindanger') %}
            <br/>
            <div class="alert alert-danger alert-block"><a href="#" data-dismiss="alert" class="close">×</a>
                {{ flashMessage }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-green">
                            <i class="icon-users font-green"></i>
                            <span class="caption-subject bold uppercase">

                             {% if role == "admin" %}
                            {{ 'page.user'|trans }}
                             {% elseif role == "vip" %}
                             Liste des VIPs
                             {% elseif role == "fan"%}
                             Liste des groupes de fan
                             {% elseif role == "pro"%}
                            Liste des  Entreprises
                             {% elseif role == "membre"%}
                        Liste des membres
                             {% endif %}

                             </span>
                        </div>
                           {% if role == "admin" %}
                        <a   href="{{ path('fos_user_registration_register') }}"
                           class="btn btn-primary center-btn"> <i class="fa fa-plus"></i> &nbsp;{{ 'btn.add'|trans }}   </a>
                           {% endif %}
                        <div class="tools"></div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover dt-responsive" width="100%"
                               id="sample_3">
                            <thead>
                            <tr>
                                <th> N°</th>
                                <th>  {{ 'form.username'|trans }}</th>
                                <th> {{ 'form.email'|trans }} </th>
                                   <th> Date d'inscription </th>
                              <th> {{ 'form.role'|trans }} </th>
                               <th> {{ 'form.action'|trans }} </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users|reverse %}
                                <tr>
                                    <td>
                                       {{ loop.index }}
                                    </td>
                                    <td>
                                    <a href="{{ path('collection',{'activeTab': "rendez-vous" , 'fullName': user.username , 'id': user.id}) }}" target="_blank">
                                    {{ user.username }}
                                    </a>
                                    </td>
                                    <td>{{ user.email }}</td>
                                    <td>{% if user.datecreate != null  %}{{ user.datecreate|date('d/m/Y') }} {% else %} -- {% endif %}</td>
                                    <td>{{ user.roles[0] }}</td>
                                    <td>

                                        <a title="Gestion de Role" href="{{ path('user_gestion_role', {'id': user.id}) }}" class="btn btn-outline btn-circle btn-sm blue">
                                            <i class="fa fa-edit"></i>  Gestion de Role </a>

                                         <a title=" {{ "btn.show"|trans }}" href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-outline btn-circle btn-sm purple">
                                            <i class="fa fa-edit"></i>  {{ "btn.show"|trans }} </a>

                                        <a href="#myModal{{ user.id }}" data-toggle="modal"
                                           class="btn btn-outline btn-circle dark btn-sm black">
                                            <i class="fa fa-trash-o"></i>{{ 'btn.remove'|trans }}  </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
        {% for user in users %}
            <!-- Modal -->
            <div class="modal fade" id="myModal{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h2 class="modal-title">  {{ 'message_alert_remove'|trans }}</h2>
                        </div>
                        <div class="modal-body">
                            <h2>  {{ 'message_validation_remove'|trans }} </h2>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default"
                                    data-dismiss="modal"> {{ 'btn.cancel'|trans }}  </button>
                            <a href="{{ path('user_delete', {'id': user.id}) }}">
                                <button type="button" class="btn btn-danger"><i
                                            class="fa fa-trash"></i> {{ 'btn.remove'|trans }} </button>
                            </a>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        {% endfor %}
    {% endblock %}