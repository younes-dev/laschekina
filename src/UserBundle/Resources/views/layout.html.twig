<!-- BEGIN HEAD -->

<head>
    <meta charset="utf-8" />
    <title>
{%-if block('title') -%} {{ block('title') }} |VIP Crossing {%- else -%} VIP Crossing {%- endif -%}

	</title>

    <link href="{{ asset('assets/css/lib-styles.css') }}" rel="stylesheet" type="text/css"/>

    <link href="{{ asset('assets/css/style-login.min.css') }}" rel="stylesheet" type="text/css"/>

<body class=" login">
<div class="user-login-5">
    <div class="row bs-reset">
        <div class="col-md-6 login-container bs-reset">
            <img class="login-logo login-6" src="{{ asset('assets/images/logo.png')}}"  />
            <div class="login-content">
                <h1 style="margin-bottom: 15%;
"> {{ 'layout.login'|trans }} </h1>
                <p>
                    {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
                {% endfor %}
                {% endfor %}
                {% endif %}

                </p>

                {% block fos_user_content %}
                {% endblock fos_user_content %}

            </div>
        </div>
        <div class="col-md-6 bs-reset">
            <div class="login-bg"> </div>
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/lib-back.min.js') }}" type="text/javascript"></script>
<script >
    jQuery(document).ready(function() {
        $('.login-bg').backstretch([
                    "{{ path_picture|getImageDefault()}}"
                ], {
                    fade: 1000,
                    duration: 8000
                }
        );
    });
</script>


</body>

</html>
