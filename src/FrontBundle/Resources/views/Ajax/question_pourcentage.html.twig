

{% set poircentageSomme = reponse.oui + reponse.non %}
{% set poircentageOui = (reponse.oui *100)   / poircentageSomme  %}
{% set poircentageNon = (reponse.non * 100)  / poircentageSomme %}
<div class="progress">
    <div class="progress-bar bg-warning" role="progressbar" style="width: {{ poircentageOui }}%;     background-color: #28a745!important;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">{{ poircentageOui|number_format(2, '.', ',') }}% - OUI </div>
</div>
<div class="progress">
    <div class="progress-bar bg-danger" role="progressbar" style="width: {{ poircentageNon }}%; background-color: #dc3545!important;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"  >{{ poircentageNon|number_format(2, '.', ',') }}% - NON</div>
</div>