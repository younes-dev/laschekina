 {% if listSpectales != null %}
<div class="row">

    <div class="col-md-8 col-xs-12 col-sm-8">

        <div class="article spectacle-article">

            <a href="#">
                <div class="box-page big-poster-spectacle">

                    <div class="img-resize imgLiquid">

                        <img src="{{ path_picture ~ listSpectales[0].picture }}" class="img-full-width">
                    </div>
                    <div class="content-box">
                        <h3><a href="{{ path('front_end_show_media',{'id':   listSpectales[0].id}) }}" >{{ listSpectales[0].title }} </a><br/>
                            {{  listSpectales[0].shortdescription[:40] }} {% if  listSpectales[0].shortdescription|length > 40 %}...{% endif %}</h3>
                        <p>{{ listSpectales[0].startdate|localizeddate('none', 'none', app.request.locale, null, 'd MMMM Y') }}</p>

                    </div>
                </div>
            </a>

        </div>
  


  </div>


    <div class="col-md-4 col-xs-12 col-sm-4">

        {% if listSpectales|length > 3 %}
            {% for i in 1..2 %}
	           <div class="article {% if i == 1 %} spectacle-article {% endif %}">

            <a href="#">
                <div class="box-page small-poster-spectacle">

                    <div class="img-resize imgLiquid">

                        <img src="{{ path_picture ~ listSpectales[i].picture }}" class="img-full-width">
                    </div>
                    <div class="content-box">
                        <h3><a href="{{ path('front_end_show_media',{'id':   listSpectales[i].id}) }}" >{{ listSpectales[i].title }} </a> <br/>
                            {{  listSpectales[i].shortdescription[:40] }} {% if  listSpectales[i].shortdescription|length > 40 %}...{% endif %}</h3>
                        <p>{{ listSpectales[i].startdate|localizeddate('none', 'none', app.request.locale, null, 'd MMMM Y') }}</p>

                    </div>
                </div>
            </a>

        </div>

        {% endfor %}

        {% endif %}

    </div>


</div>
{% endif %}

